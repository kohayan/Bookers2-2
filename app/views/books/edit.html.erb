<div class="col-lg-offset-3 col-lg-6">
	<h2>Editing Book</h2>
	<% if @book.errors.any? %>
	<div id="error_explanation">
		<h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= form_for(@book) do |f| %>
	<div class="row">
		<p>Title</p>
		<%= f.text_field :title, class: 'col-xs-12' %>
	</div>
	<div class="row">
		<p>Body</p>
		<%= f.text_area :body, class: 'col-xs-12' %>
	</div>
	<div class="row">
		<%= f.submit 'Update Book', class: 'col-xs-12 btn btn-primary' %>
	</div>
	<% end %>

	<div class="row">
		<%= link_to 'Show', book_path(@book) %> |
		<%= link_to 'Back', books_path %>
	</div>
</div>