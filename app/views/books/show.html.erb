			<%= render 'users/info', book: Book.new, user: @user %>

			<div class="col-xs-9">
				<h2>Book detail</h2>

				<table class="table">
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
								<br>
								<%= @user.name %>
								<% end %>
							</td>
							<td>
								<%= link_to @book.title, book_path(@book)  %>
							</td>
							<td><%= @book.body %></td>
							<% if Favorite.find_by(user_id: current_user.id, book_id: @book.id) %>
							<td>
								<%= link_to book_favorites_path(@book), method: :delete do %>
								<span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
								<%= @book.favorites.count %>
								<% end %>
							</td>
							<% else %>
							<td>
								<%= link_to book_favorites_path(@book), method: :post do %>
								<span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
								<%= @book.favorites.count %>
								<% end %>
							</td>
							<% end %>

							<td>
								コメント数：
								<%= @book.book_comments.count %>
							</td>

							<% if @book.user == current_user %>
							<td>
								<%= link_to 'Edit', edit_book_path, class: "btn btn-default" %>
							</td>
							<td>
								<%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-default" %>
							</td>
							<% end %>
						</tr>
					</tbody>
				</table>

				<h3>Comment</h3>
				<table>
					<% @book.book_comments.each do |comment| %>
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(comment.user) do %>
								<%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
								<%= comment.user.name %>
								<% end %>
							</td>
							<td>
								<%= comment.comment %>
							</td>
							<% if current_user.id == comment.user_id %>
							<td>
								<%= link_to "削除", book_book_comment_path(@book,comment), method: :delete %>
							</td>
							<% end %>
						</tr>
					</tbody>
					<% end %>
				</table>

				<% if @comment.errors.any? %>
				<div id="error_explanation">
					<h2><%= @comment.errors.count %>件のerrorが発生しました。</h2>
					<ul>
						<% @comment.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

				<%= form_for [@book,@comment] do |f| %>
				<%= f.text_area :comment, size: "90x5" %>
				<%= f.submit "送信" %>
				<% end %>

			</div>
