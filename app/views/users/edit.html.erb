<h2>User info</h2>


<%= form_for(@user) do |f| %>
<%= render 'layouts/errors', obj: @user %>
<h5>Name</h5>
<%= f.text_field :name %>
<h5>Image</h5>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
<h5>introduction</h5>
<%= f.text_area :introduction %>
<%= f.submit 'Update User' %>
<% end %>

