<h2>User info</h2>


<%= form_for(@user) do |f| %>
<%= render 'layouts/errors', obj: @user %>
<h5>Name</h5>
<%= f.text_field :name %>
<h5>Image</h5>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
<h5>introduction</h5>
<%= f.text_area :introduction %>
<h5>Postal code</h5>
    <%= f.text_field :postal_code %>
<h5>Prefecture code</h5>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
<h5>City</h5>
    <%= f.text_field :city %>
<h5>Street</h5>
    <%= f.text_field :street %>


<%= f.submit 'Update User' %>
<% end %>
